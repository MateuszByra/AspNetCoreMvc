@model OdeToFood.ViewModels.HomePageViewModel

@{ 
    ViewBag.Title = "Home";
    //Layout = "~/Views/Shared/_Layout.cshtml"; used in _ViewStart, to render in all pages
}

<h1>Welcome!</h1>
<table>
    @foreach (var restaurant in Model.Restaurants)
            {
        <tr>
            <td>@restaurant.Name</td>
            <td>
                @*<a href="/home/details/@restaurant.Id">Details</a>*@
                @*@Html.ActionLink("View", "Details", new { id = restaurant.Id })*@ @*jesli akcja w tym samym kontrolerze, to nie trzeba podawac jego nazwy*@
                <a asp-action="Details" asp-route-id="@restaurant.Id">Detail</a>
                <a asp-action="Edit" asp-route-id="@restaurant.Id">Edit</a>
            </td>
        </tr>
    }
</table>

<a asp-controller="Home" asp-action="Create">Create</a>

@section footer{
<h3>@Model.CurrentMessage</h3>
}
